<div class="container">

  <div class="banner">
    <h1>Bonjour</h1>
  </div>

  <div class="card-index">
    <% @infos.each do |info| %>

        <h2><%= info.name %></h2>
        <h2><%= info.taille %></h2>
        <h2><%= info.poids %></h2>

      <%= link_to "Supprimer", info_path(info), method: :delete, data: {confirm: "tu es sure?"} %>
    <% end %>
  </div>

  <div class="btn">
    <%= link_to "Ajoute un Item", new_info_path %>
  </div>

</div>
