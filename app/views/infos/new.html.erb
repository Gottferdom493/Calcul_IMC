<div class="container">

  <div class="banner">
    <h1>Rebonjour</h1>
</div>

  <div class="card-new">
    <%= form_for @info do |f| %>

      <%= f.label :name, "Entre ton nom" %>
      <%= f.text_field :name, placeholder: "Ajout ton nom" %>

      <%= f.label :taille, "Entre ta taille" %>
      <%= f.number_field :taille, placeholder: "Ajout ta taille" %>

      <%= f.label :poids, "Entre ton poids" %>
      <%=f.number_field :poids, placeholder: "Ajout ton poids" %>

      <%= f.submit :Création %>

    <% end %>
  </div>

  <div class="btn">
    <%= link_to "Retour à la liste", infos_path %>
  </div>

</div>
